<% include ./partials/header.ejs %>

<div class="container">
    <form action="/" method="POST">
        <div class="form-group">
            <input class="form-control" type="text" name="title" placeholder="Title">        
        </div>
        
        <div class="form-group">
            <input class="form-control" type="text" name="description" placeholder="Description">
        </div>
        
        <div id="l1" class="form-group">
            <div class="form-inline">
                <input class="form-control" type="text" name="label[0]" placeholder="Label">
                <input id="add" class="btn btn-default" type="button" name="add" value="+">
            </div>
        </div>
        
        <div class="form-group">
            <input class="btn btn-primary" type="submit" value="Submit">    
        </div>
        
    </form>
    <a href="/">Back</a>
</div>

<script type="text/javascript">
    var l = 1;
    var form = document.querySelector("form");
    
    form.addEventListener("click", function(event){
        if(event.target.id == "add"){
            var label = document.querySelector("#l" + l);
            l++;
            document.querySelector("#add").remove();
            label.insertAdjacentHTML('afterend', '<div id="l' + l + '" class="form-group"><div class="form-inline"><input class="form-control" type="text" name="label[' + (l + 1) + ']" placeholder="Label"> <input id="add" class="btn btn-default" type="button" name="add" value="+"></div></div>');
        }
    });
</script>
